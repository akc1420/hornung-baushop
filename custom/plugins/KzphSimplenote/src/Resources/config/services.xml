<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Kzph\Simplenote\Core\Content\KzphSimplenoteNote\KzphSimplenoteNoteDefinition">
            <tag name="shopware.entity.definition" entity="kzph_simplenote" />
        </service>
        
        <service id="Kzph\Simplenote\Core\Content\KzphSimplenoteNote\KzphSimplenoteNoteEntityOrderExtension">
            <tag name="shopware.entity.extension"/>
        </service>
        
        <service id="Kzph\Simplenote\Core\Content\KzphSimplenoteNote\KzphSimplenoteNoteEntityProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>
       
        <service id="Kzph\Simplenote\Core\Content\KzphSimplenoteNote\KzphSimplenoteNoteEntityCustomerExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <!-- Subscriber -->
        <service id="Kzph\Simplenote\Subscriber\OrderSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="kzph_simplenote.repository" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
    </services>
</container>